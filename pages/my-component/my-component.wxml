<view class="container">
  <form bindsubmit="handleSubmit">
    <view class="input-container">
      <text>用户名：</text>
      <input type="text" name="username" model:value="{{formData.username}}" placeholder="请输入用户名" required />
    </view>
    <view class="input-container">
      <text>邮箱：</text>
      <input type="text" name="email" model:value="{{formData.email}}" placeholder="请输入邮箱" required />
    </view>
    <button form-type="submit">保存</button>
  </form>
</view>