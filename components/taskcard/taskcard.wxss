
/* 任务编辑容器 */
.card {
  border: 0rpx solid rgb(241, 241, 241);
  padding: 0rpx;
  background-color: rgba(155, 155, 155, 0.1);
  margin: 40rpx;
  border-radius: 20rpx;
  overflow: hidden;
  width: 290px; 
  height: 654px; 
  display: block; 
  box-sizing: border-box; 
  position: relative; 
  left: -2px; 
  top: -6px
  
}
 /* 黑色边框 */
 .border {
  border: 7rpx solid rgb(107, 107, 107);
  background-color: rgba(0, 0, 0, 0); /* 内部透明 */
  margin: 10rpx 0;
  width: 706rpx; 
}
/*需求内容字 */
.title{
  color:#161616;
 
  margin-bottom: 1rpx;
  font-weight: bold;
}
.info{
  color:#080808; 
  font-size: 30rpx;

}

/* 需求内容*/
.section {
  margin-bottom: 10rpx;
}
/* 需求内容、任务说明文字样式*/
.title {
  font-weight: bold;
  margin-bottom: 5rpx;
  font-size: 30rpx;
  
}
/* 发卡人、上传。。。文字样式*/
.title1 {
  font-weight: bold;
  margin-bottom: 5rpx;
  font-size: 25rpx;
  
}
/* 一句话、具体金额、当前微信名*/
.input {
  border: 0rpx solid rgb(231, 231, 231);
  padding: 0rpx;
  margin-bottom: 0rpx;
  border: none;
  outline: none;
  font-size: 30rpx;
  color: #494949;
}
/* 简称*/
.input1 {
  border: 0rpx solid rgb(218, 218, 218);
  font-size: 120rpx;
  padding: 5rpx;
  margin-bottom: 5rpx;
  border: none;
  outline: none;
  color: #b8b8b8
}



.input-small {
  border: 1rpx solid #999;
  font-size: 25rpx;
  padding: 5rpx;
  margin-right: 10rpx;
  border: none;
  outline: none;
}
/* 回馈比预计工时外框*/
.picker {
  margin-bottom: 0rpx;
  font-size: 25rpx; /* 设置字体大小为14像素 */
  border: 0rpx solid rgb(117, 110, 110); /* 设置边框样式 */
  padding: 0rpx; /* 设置内边距 */
  width: 130rpx; /* 设置边框长度 */
  font-weight: bold; /* 设置字体为粗体 */
}

.picker2 {
  margin-bottom: 0rpx;
  color: #3f3b3b;
  font-size: 60rpx; /* 设置字体大小为60rpx */
  font-weight: bold; /* 设置字体为粗体 */
  border: 0rpx solid rgb(117, 110, 110); /* 设置边框样式 */
  padding: 0rpx; /* 设置内边距 */
  width: 130rpx; /* 设置边框长度 */
}
/* 任务说明外框好像是*/
textarea.input {
  border: 1rpx solid #999;
  padding: 5rpx;
  margin-bottom: 5rpx;
  height: 100rpx;
}

.image-list {
  margin-bottom: 10rpx;
}

.image-list image {
  width: 100%;
  height: auto;
  margin-bottom: 5rpx;
}
/* 上传文件按钮*/
.upload-section {
  margin-top: 10rpx;
}

.upload-list {
  margin-bottom: 10rpx;
}

.upload-item {
  margin-bottom: 5rpx;
}

.upload-image {
  width: 100%;
  height: auto;
}

.upload-file {
  margin-left: 5rpx;
}
/* 删除card按钮*/
.delete-btn {
  position: absolute;
  left: 578rpx;
  top: -72rpx;
  width: 46rpx;
  height: 46rpx;
  display: flex; /* 更改为 flex */
  justify-content: center; /* 水平居中 */
  align-items: center; /* 垂直居中 */
  text-align: center; /* 文本居中 */
  background: transparent; /* 背景透明 */
  box-sizing: border-box;
  color: rgb(170, 167, 167);
  font-size: 30rpx;
}